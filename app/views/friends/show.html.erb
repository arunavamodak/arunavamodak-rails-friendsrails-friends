<div class="bg-light p-5 rounded-lg m-3">
  <h2 class="display-4"> <%= @friend.name %></h2>
  <hr class="my-4">
  <p class="lead"><%= @friend.email %></p>
  <p class="lead"><%= @friend.phone %></p>
  <p class="lead"><%= @friend.twitter %></p>
  <br/><br/>
  <%= link_to 'Edit', edit_friend_path(@friend), class:"btn btn-secondary"%>
  <%= link_to 'Back', friends_path, class:"btn btn-dark"%>
  <%= link_to 'Remove', @friend, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
</div>


